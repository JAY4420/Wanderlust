    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListing){ %>
            <a class="atag" href="/listings/<%= listing._id %>">
                <div class="listing-card col card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="place_image" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <p class="card-title"><b><%= listing.title %></b></p>
                            <p class="card-descr"><%= listing.description %></p>
                            <p class="card-price"><b><%= listing.price %>â‚¹</b> /night 
                                <i class="text-info">+18%GST </i> 
                            </p> 
                        </p>
                    </div>
                </div>
            </a>

            <% } %>
    </div>
    <br>

    <script>
        let texSwitch = document.getElementById("flexSwitchCheckDefault");
        texSwitch.addEventListener("click",()=>{
            let taxinfo = document.getElementsByClassName("text-info");
            for(info of taxinfo){
                if(info.style.display !=  "inline"){
                    info.style.display = "inline";
                    info.style.color = "black";                   
                }else{
                    info.style.display = "none";
                }
            }
        })
    </script>